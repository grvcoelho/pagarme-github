normalize()
box-sizing-reset()

html
body
    height 100%
    background #f7f7f7
    font-size 16px
    font-family $font-family-base
    color #202020
    overflow-x hidden
    text-rendering optimizeLegibility
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
