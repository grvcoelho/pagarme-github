.btn
    display inline-block
    padding 5px 7px
    margin-bottom 0
    background image none
    border 2px solid $grey-light
    border-radius 4px
    font-size 16px
    font-family $font-family-base
    font-weight 600
    font-style italic
    line-height 16px
    text-transform uppercase
    text-align center
    text-decoration none
    white-space nowrap
    vertical-align middle
    color $grey-light
    touch-action manipulation
    cursor pointer
    user-select none
    transition opacity $bezier-base .28s
    parent = selector()

    &:hover
        opacity .7
    &:active
        opacity .4

    &--success
        @extend {parent}
        border-color $green
        color $green
